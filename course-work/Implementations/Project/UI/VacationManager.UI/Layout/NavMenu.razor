@using Microsoft.AspNetCore.Components.Authorization
@using VacationManager.UI.Api.Services
@using VacationManager.UI.Shared
@using VacationManager.UI.Components

@inject JwtAuthenticationStateProvider AuthStateProvider

<AuthorizeView>
    <Authorized>
        <NavLink href="/" class="nav-button" ActiveClass="nav-button-active">Home</NavLink>
        <br />

        <RequireRole Role="CEO">
            <NavLink href="/ceo/company" class="nav-button" ActiveClass="nav-button-active">My company</NavLink>
            <br />
            <NavLink href="/leaves/manage" class="nav-button" ActiveClass="nav-button-active">Leave Requests</NavLink>
        </RequireRole>

        <RequireRole Role="Manager">
            <NavLink href="/leaves/manage" class="nav-button" ActiveClass="nav-button-active">Leave Requests</NavLink>
            <br />
            <NavLink href="/leaves/create" class="nav-button" ActiveClass="nav-button-active">Create Leaves</NavLink>
        </RequireRole>

        <RequireRole Role="Employee">
            <NavLink href="/my-leaves" class="nav-button" ActiveClass="nav-button-active">My Leaves</NavLink>
            <br />
            <NavLink href="/leaves/create" class="nav-button" ActiveClass="nav-button-active">Create Leaves</NavLink>
        </RequireRole>

        <RequireRole Role="Dev">
            <NavLink href="/admin/unverified-users" class="nav-button" ActiveClass="nav-button-active">Unverified Users</NavLink>
        </RequireRole>

        <div class="mb-0 mt-2">
            <Logout></Logout>
        </div>
    </Authorized>

    <NotAuthorized>
        <NavLink href="/login" class="nav-button" ActiveClass="nav-button-active">Login</NavLink>
        <NavLink href="/register" class="nav-button" ActiveClass="nav-button-active">Register</NavLink>
    </NotAuthorized>
</AuthorizeView>


<style>
    .nav-button {
        display: inline-block;
        background-color: #007bff;
        color: #fff;
        padding: 0.5rem 1rem;
        margin-right: 0.5rem;
        border: none;
        border-radius: 0.375rem;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s ease-in-out;
        cursor: pointer;
    }

        .nav-button:hover {
            background-color: #0056b3;
            text-decoration: none;
            color: #fff;
        }

        .nav-button:active,
        .nav-button-active {
            background-color: #004085;
        }

</style>